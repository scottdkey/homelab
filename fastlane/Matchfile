# Fastlane Match Configuration
# This file manages code signing certificates and provisioning profiles
# See: https://docs.fastlane.tools/actions/match/

# Git repository URL where certificates are stored
# Private git repository for storing certificates
git_url("https://github.com/scottdkey/fastlane")

# Git branch to use
git_branch("master")

# Storage mode: "git" (default) or "google_cloud" or "s3"
storage_mode("git")

# Apple Developer Team ID
# Get this from: https://developer.apple.com/account
team_id("3G798JDTL3")

# Username for Apple Developer account
username("scottdkey@gmail.com")

# App identifier (bundle ID)
# Note: This bundle ID must exist in your Apple Developer account
# Create it at: https://developer.apple.com/account/resources/identifiers/list
# Or match will attempt to create it automatically
app_identifier("dev.scottkey.halvor")

# Type of certificates to sync
# Options: "development", "adhoc", "appstore", "enterprise"
type("appstore")

# Additional options
readonly(false)
verbose(true)

# Skip confirmation prompts (useful for CI/CD)
skip_confirmation(false)

# Skip certificate verification (not recommended)
skip_certificate_matching(false)

# Force for new devices (will regenerate profiles)
force_for_new_devices(false)

# Force for new certificates (will regenerate certificates)
force_for_new_certificates(false)

# Shallow clone (faster, but less history)
shallow_clone(true)
